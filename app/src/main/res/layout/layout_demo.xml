<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDemo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/avaDemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/anh1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cardViewDemo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameDemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDesDemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pin"
                android:text="HA LONG BAY"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRateDemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cardViewDemo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cardViewDemo"
            android:drawableLeft="@drawable/ic_staryellow"
            android:text=" Rate"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/checkBoxDemo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@id/cardViewDemo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:button="@null"
            android:background="@drawable/custom_selector_button1"
           />

    </RelativeLayout>


</androidx.cardview.widget.CardView>